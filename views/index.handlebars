<div class="container row">
	<div class="col-md-12 text-center" id="top-bar">
		<h1> Mongo Recipe Scraper! </h1>
	</div>
</div>
<div class="container">
    <div class="row"> 
        {{#each recipe}}
        <div class="recipe-group center-block text-center">
            <h2 class="recipe-title">{{title}}</h2>
            <img src="{{imgLink}}" alt="Food Image" width="400" height="400">
            <div class="contain-link">
            <a class="recipeLink" href="{{recipe}}" target="_blank">{{recipe}}</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>