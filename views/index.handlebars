<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1>Mongo Scraper</h1>
        <p>Recipe Edition</p>
        <button class="btn btn-danger scrape-new center-block text-center">
            <h4>Scrape New Recipes!</h4>
        </button>
    </div>
</div>
<div class="container">
    <div class="row">
        {{#each recipe}}
        <div class="recipe-group center-block text-center col-md-12">
            <h3 class="recipe-title">{{title}}</h3>
            <div class="contain-link row">
                <div class="col-md-6 image">
                    <img src="{{imgLink}}" alt="Food Image" class="food-img" width="250" height="200">
                </div>
                <div class="col-md-6 buttons">
                    <button class="center-block text-center">
                        <a class="recipeLink" href="{{recipe}}" target="_blank">
                            <h4>Click for the Recipe!</h4>
                        </a>
                    </button>
                    {{#if saved}}
                    <button class="favorite center-block text-center" data-id="{{_id}}" data-saved="{{saved}}">
                        <h4>
                           â™¥ Saved to Your Recipes
                        </h4>
                    </button>
                    {{else}}
                    <button class="favorite center-block text-center" data-id="{{_id}}" data-saved="{{saved}}">
                        <h4>
                            Add to Saved Recipes?
                        </h4>
                    </button>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>