<div class="container row">
	<div class="col-md-12 text-center" id="top-bar">
		<h1> Mongo Recipe Scraper! </h1>
	</div>
</div>
<div class="container">
    <div class="row"> 
        {{#each recipe}}
        <div class="recipe-group">
            <h2 class="recipe-title">{{title}}</h2>
            <a class="recipeLink" href="{{recipe}}">{{recipe}}</a>
            <img src="{{imgLink}}" alt="Food Image">
        </div>
        {{/each}}
    </div>
</div>